<!doctype html>
<html>

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
        integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


    <link href="/css/header.css" rel="stylesheet" type="text/css" />
    <link href="/css/articleList.css" rel="stylesheet" type="text/css" />
    <link rel="icon" href="favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="/imgs/logo.ico" type="image/x-icon" />

    <title>文藝富心</title>
</head>

<body>
    <!-- navbar -->
    <div id="header"></div>

    <!-- 文章列表區塊 -->
    <section id="articleList">
        <div class="container-fluid article">
            <center>
                <h3>我的文章管理</h3>
                <hr class="highlight">

            </center>

            <div class="d-flex justify-content-center" style="margin-bottom: 1.5em">
                <button type="button " class="btn btn-secondary align-middle footer"
                    onclick="location.href='/articleManage/movie/1'">電影類</button>
                <button type="button " class="btn btn-secondary align-middle footer"
                    onclick="location.href='/articleManage/music/1'">音樂類</button>
                <button type="button " class="btn btn-secondary align-middle footer"
                    onclick="location.href='/articleManage/book/1'">書籍類</button>
                <button type="button " class="btn btn-secondary align-middle footer"
                    onclick="location.href='/articleManage/exhibition/1'">展覽類</button>
                <button type="button " class="btn btn-secondary footer"
                    onclick="location.href='/member/articleManage/1'">全部</button>
            </div>

            <div class="row d-flex justify-content-center  no-gutters">
                <div class="col-12 mb-3 col-lg-8 ">
                    <!-- list -->
                    <% for(var i = 0; i < myArtiClass[0].length ; i++) { %>
                    <div class="card shadow list " style="cursor:pointer; ">
                        <div class="card-body " onclick="location.href='/article/<%= myArtiClass[0][i].artiNum %>'">
                            <div class="poster d-flex justify-content-between">
                                <div class="name">
                                    <div>
                                        <a class="name"><%= myArtiClass[0][i].memName %></a>
                                        <a class="next"></a>
                                        <a class="dateTime"> 於 <%= myArtiClass[0][i].artiDateTime %>發表</a>             
                                    </div>
                                </div>
                                <div class="ml-auto">
                                    <a class="itemClass"><%= myArtiClass[0][i].artiClass %></a>
                                </div>
                            </div>
                            <hr style="margin-top: 0.5em">
                            <div class="row seperate">
                                <div class="col-sm-9 articleContent">
                                    <h3 class="card-title "><%= myArtiClass[0][i].artiHead %>
                                    </h3>
                                    <p class="card-text limitLine"><%- myArtiClass[0][i].artiCont %>
                                    </p>

                                    <!-- tag -->
                                    <div class=" tagDiv col-lg-12 ">
                                            <% if(myArtiClass[1] != undefined) { %>
                                                <% for(var j=0; j<myArtiClass[1].length; j++) {%>
                                                    <% if(myArtiClass[0][i].artiNum == myArtiClass[1][j].artiNum){ %>     
                                                        <button type=" button" class="btn  tag"><%= myArtiClass[1][j].tagName %></button>                            
                                                    <% } %>
                                                <% } %>
                                            <% } %>
                                    </div>
                                </div>
                               <!-- imgs -->
                                <div class="wrapperCard card-img-top col-lg-3"
                                    style="background-image: url( '<%= myArtiClass[0][i].imgName %>'); ">
                                </div>
                        </div>
                        </div>
                        <!-- info -->
                        <div class="info">
                            <!-- 愛心按鈕 -->
                            <button type="button" id=<%= "LikeUnLogIn" + myArtiClass[0][i].artiNum %>
                               style ="display:none" class="btn postInfo" onclick="location.href='/login'"><i class="fab fa-gratipay"></i>
                                <a><%= myArtiClass[0][i].likeCount %></a></button>
                            <button type="button" id=<%="addLike" + myArtiClass[0][i].artiNum %> class="btn postInfo"
                                style ="display:none" onclick=<%= "addLike(" + myArtiClass[0][i].artiNum + ")" %>>
                                <i class="fab fa-gratipay"></i><a id=<%= "addLikeCount" + myArtiClass[0][i].artiNum %>>
                                    <%= myArtiClass[0][i].likeCount %> </a> </button>
                            <button type="button" id=<%= "delLike" + myArtiClass[0][i].artiNum %> class="btn postInfo"
                                style="display:none" onclick=<%= "delLike(" + myArtiClass[0][i].artiNum + ")" %>>
                                <i class="fab fa-gratipay" style="color:#c93737;"></i><a id=<%= "delLikeCount" + myArtiClass[0][i].artiNum %>>
                                    <%= myArtiClass[0][i].likeCount %></a></button>

                           <!-- 判斷是否有按過愛心 -->
                           <% var isLike = false %>
                           <%  for (var j = 0; j < myArtiClass[3].length ; j++) { %>
                               <!-- 如果有按過愛心 -->
                               <% if(myArtiClass[0][i].artiNum == myArtiClass[3][j].artiNum ) { %>
                                   <script type="text/javascript">                                  
                                       document.getElementById("delLike" + "<%= myArtiClass[0][i].artiNum %>").style.display = "inline";
                                       document.getElementById("addLike" + "<%= myArtiClass[0][i].artiNum %>").style.display = "none";
                                       document.getElementById("LikeUnLogIn" + "<%= myArtiClass[0][i].artiNum %>").style.display = "none";
                                   </script>
                                   <% isLike = true %>
                               <% } %>
                           <% } %>
                           <!-- 如果沒按過愛心 -->
                           <% if(isLike == false ){ %>
                               <script type="text/javascript">
                                   document.getElementById("addLike" + "<%= myArtiClass[0][i].artiNum %>").style.display = "inline";
                                   document.getElementById("LikeUnLogIn" + "<%= myArtiClass[0][i].artiNum %>").style.display = "none";
                                   document.getElementById("delLike" + "<%= myArtiClass[0][i].artiNum %>").style.display = "none";
                               </script>
                           <% } %>

                            <!-- 留言數量按鈕 -->
                            <button type="button" class="btn postInfo" onclick="location.href='/article/<%= myArtiClass[0][i].artiNum %>'"><i
                                    class="fas fa-comment-dots"></i><a><%= myArtiClass[0][i].messCount %></a></button>

                            <!-- 收藏按鈕 -->
                            <button type="button" id=<%= "unLogIn" + myArtiClass[0][i].artiNum %> class="btn postInfo"
                                style ="display:none" onclick="location.href='/login'">
                                <i class="far fa-bookmark"></i></button>
                            <button type="button" id=<%=  "addColle" + myArtiClass[0][i].artiNum %> class="btn postInfo"
                                style ="display:none" onclick=<%= "addColle(" + myArtiClass[0][i].artiNum + ")" %>>
                                <i class="far fa-bookmark"></i></button>
                            <button type="button" id=<%= "delColle" + myArtiClass[0][i].artiNum %> class="btn postInfo"
                                style ="display:none" onclick=<%= "delColle(" + myArtiClass[0][i].artiNum + ")" %>>
                                <i class=" fas fa-bookmark"></i></button>

                            <!--  收藏按鈕控制 -->
                            <% var isCollection = false %>
                                <% if(myArtiClass[4] != undefined){ %>
                                    <% for(var j = 0 ; j < myArtiClass[4].length ; j++) { %>
                                        <!-- 如果有收藏 -->
                                        <% if (myArtiClass[4][j].artiNum == myArtiClass[0][i].artiNum){ %>
                                            <script type="text/javascript">
                                                document.getElementById("delColle" + "<%= myArtiClass[0][i].artiNum %>").style.display = "inline";
                                                document.getElementById("addColle" + "<%= myArtiClass[0][i].artiNum %>").style.display = "none";
                                                document.getElementById("unLogIn" + "<%= myArtiClass[0][i].artiNum %>").style.display = "none";
                                            </script>
                                            <% isCollection = true %>
                                        <% } %>
                                    <% } %>
                                <% } %>
                                <!-- 如果沒收藏 -->
                                <% if( isCollection == false ){ %>
                                    <script type="text/javascript">
                                        document.getElementById("addColle" + "<%= myArtiClass[0][i].artiNum %>").style.display = "inline";
                                        document.getElementById("unLogIn" + "<%= myArtiClass[0][i].artiNum %>").style.display = "none";
                                        document.getElementById("delColle" + "<%= myArtiClass[0][i].artiNum %>").style.display = "none";
                                    </script>
                                <% } %>          
                           
                        </div>
                        <!-- info結束 -->
                    </div>
                    <div class="w-100"></div>
                    <% } %>
                    <!-- listEnd -->
            </div>
        </div>
        <nav aria-label="Page navigation example" style="margin-bottom: 4em;">
                <ul class="pagination justify-content-center">
                    <li class="page-item previous">
                    <a class="page-link" href="#/" onclick="location.href=`${pagePrevious}`" tabindex="-1" aria-disabled="true"><i class="fas fa-chevron-left"></i></a>
                    </li>

                    <% for(var j = 1 ; j <= myArtiClass[6][0].count ; j++) {%>
                    <li class="page-item"><a class="page-link" href="#/" onclick="location.href=`<%=j%>`"><%=j%></a></li>
                    <% } %>
                    <li class="page-item next">
                    <a class="page-link" href="#/" onclick="location.href=`${pageNext}`"><i class="fas fa-chevron-right"></i></a>
                    </li>
                </ul>
            </nav>
    </section>
    <!-- 文章列表區塊結束 -->

    <a href="#" id="gotop">
        <i class="fa fa-angle-up"></i>
    </a>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
    <script src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="/javascripts/active.js"></script>
    <script src="/javascripts/navbar.js"></script>
     <!-- 收藏 ajax script -->
     <script>
        var pagePrevious = parseInt('<%= myArtiClass[7][0]%>')-1
        var pageNext = parseInt('<%= myArtiClass[7][0]%>')+1
        if (pagePrevious == 0) {
             $('.previous').addClass('disabled')
        } else {
            $('.previous').remove('disabled')
        }
        if ('<%= myArtiClass[6][0].count%>' == '<%= myArtiClass[7][0]%>') {
            $('.next').addClass('disabled')
        } else {
            $('.next').remove('disabled')
        }
        Array.from($('.pagination').find('.page-link')).map((item) => {
            if (item.innerText == '<%= myArtiClass[7][0]%>') {
                item.parentElement.classList.add('disabled')
                item.style.fontWeight = 'bolder'
            }
        })
        Array.from($('.page-link').parent('li.disabled')).map((item) => {
            item.children[0].style.color = "#d9d9d9"
        })
        $('button').click(function() {
            if ($(this).children('.fa-gratipay').length > 0) {
                $(this).parent('div').find('.fa-gratipay').parent('button').attr('disabled', true)
                setTimeout(() => {
                    $('button').attr('disabled', false)
                }, 1000)
            }
        })
            //新增收藏
            function addColle(artiNum) {
                collection(artiNum);
                $.ajax({
                    url: '/addCollection',
                    type: 'POST',
                    dataType: 'text',
                    data: { "likeType": "article", "artiNum": artiNum },
                    success: function (res) {
                    },
                    error: function (res) {
                        console.log("失敗", JSON.stringify(res));
                    }
                });
            };
            //刪除收藏
            function delColle(artiNum) {
                cancelCollection(artiNum);
                $.ajax({
                    url: '/delCollection',
                    type: 'POST',
                    dataType: 'text',
                    data: { "likeType": "article", "artiNum": artiNum },
                    success: function (res) {
                    },
                    error: function (res) {
                        console.log("失敗", JSON.stringify(res));
                    }
                });
            };
            //點收藏後改變屬性
            function collection(artiNum) {
                document.getElementById("delColle" + artiNum).style.display = "inline";
                document.getElementById("LikeUnLogIn" + artiNum).style.display = "none";
                document.getElementById("addColle" + artiNum).style.display = "none";
            }
            //取消收藏後改變屬性
            function cancelCollection(artiNum) {
                document.getElementById("addColle" + artiNum).style.display = "inline";
                document.getElementById("LikeUnLogIn" + artiNum).style.display = "none";
                document.getElementById("delColle" + artiNum).style.display = "none";
            }

        </script>
        <!-- 愛心 ajax script -->
        <script>
            //新增愛心
            function addLike(artiNum) {
                $.ajax({
                    url: '/addLike',
                    type: 'POST',
                    dataType: 'text',
                    data: { "likeType": "article", "artiNum": artiNum },
                    success: function (res) {
                        likeCount(artiNum);
                        like(artiNum);
                    },
                    error: function (res) {
                        console.log("失敗", res);

                    }
                });

            };
            //刪除愛心
            function delLike(artiNum) {
                $.ajax({
                    url: '/delLike',
                    type: 'POST',
                    dataType: 'text',
                    data: { "likeType": "article", "artiNum": artiNum },
                    success: function (res) {
                        likeCount(artiNum);
                        cancelLike(artiNum);
                    },
                    error: function (res) {
                        console.log("刪除失敗", JSON.stringify(res));
                    }
                });

            };
            //點愛心後改變屬性
            function like(artiNum) {
                document.getElementById("delLike" + artiNum).style.display = "inline";
                document.getElementById("LikeUnLogIn" + artiNum).style.display = "none";
                document.getElementById("addLike" + artiNum).style.display = "none";
            }
            //取消愛心後改變屬性
            function cancelLike(artiNum) {
                document.getElementById("addLike" + artiNum).style.display = "inline";
                document.getElementById("LikeUnLogIn" + artiNum).style.display = "none";
                document.getElementById("delLike" + artiNum).style.display = "none";
            }
            function likeCount(artiNum) {
                $.ajax({
                    url: '/likeCount',
                    type: 'POST',
                    dataType: 'JSON',
                    data: { "likeType": "article", "artiNum": artiNum },
                    success: function (res) {
                        console.log(JSON.stringify(res));
                        document.getElementById("addLikeCount" + artiNum).innerHTML = JSON.stringify(res);
                        document.getElementById("delLikeCount" + artiNum).innerHTML = JSON.stringify(res);
                    },
                    error: function (res) {
                        console.log("失敗", JSON.stringify(res));
                    }

                });
            }
        </script>
</body>

</html>