<!doctype html>
<html>

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!--  js   -->
    <script src="/javascripts/jquery.min.js"></script>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
        integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">


    <link href="/css/header.css" rel="stylesheet" type="text/css" />
    <link href="/css/post.css" rel="stylesheet" type="text/css" />
    <link rel="icon" href="favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="/imgs/logo.ico" type="image/x-icon" />

    <title>文藝富心</title>
</head>

<body>
    <!-- navbar -->
    <div id="header"></div>

    <center>
        <h3>編輯貼文</h3>
        <hr class="highlight">
    </center>
    <div class="justify-content-center">
        <div class="post col-lg-8 content shadow">
            <select id="inputState" class="form-control" onchange="styleselect()">
                <option value="movie">電影類</option>
                <option value="music">音樂類</option>
                <option value="exhibition">展覽類</option>
                <option value="book">書籍類</option>
            </select>


            <input type="text" class="titleInput input-with-icon title" name="artiHead" id="artiHead" placeholder="請輸入您的標題" value="<%= items[0][0].artiHead%>">

            <div id="postInput" class="postInput" contenteditable="true" role="textbox" data-text="請輸入您的發文內容">
                <%- items[0][0].artiCont%>
            </div>
            
            <div class="tag content col-lg-12">
                <% for (var i = 0 ; i< items[2].length ; i++) { %>         
                    <span id="tag" class="tag label label-info" ><%= items[2][i].tagName %><span class="deleteTag" data-role="remove"></span></span>
                <% } %>
                    <input type="text" data-role="tagsinput" id="tagInput" class="form-control" placeholder=" + tag" />
            </div>

            <!-- <div class="text-right"> -->
            <label class="btn btn-dark col-lg-2" style="cursor: pointer">
                <input id="file-selector" name="userImg" type="file" multiple="multiple"
                    accept=".jpg,.png,.gif,.tif,.bmp" />
                <i class="fas fa-images" style="padding-right:5px"></i>加圖片
            </label>
            <!-- </div> -->
            <button type="submit" class="btn btn-danger col-lg-2 float-right postButton" onclick="submitModifyArticle()">提交</button>

            <div class="spinner-border" role="status" style="position: fixed; top: 45%; right: 47%; display: none;">
                    <span class="sr-only">Loading...</span>
             </div>

            


        </div>
    </div>



    <a href="#" id="gotop">
        <i class="fa fa-angle-up"></i>
    </a>




    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
    <script src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

    <script src="/javascripts/post.js"></script>
    <script src="/javascripts/tag.js"></script>
    <script src="/javascripts/active.js"></script>
    <script src="/javascripts/navbar.js"></script>
    <script>
            var imgs = [];
            var formData = new FormData(); //用formData來存取要傳送的所有資料
            // 選取到檔案後開始動作
            $('#file-selector').change(function(event) {
                let timeStamp = new Date().getTime()
                var file = $("#file-selector")[0];  //取得檔案
                //如果有檔案就要加入formData
                if (file.files.length) {
                    Object.keys(file.files).map((img, index) => {
                        file.files[img].timeStamp = `${timeStamp}${index}`
                        imgs.push(file.files[img])
                        // 解析檔案
                        var item = file.files[img]
                        var reader = new FileReader();
                        reader.onload = (function(item) {
                            return function(event) {
                                var src = event.target.result // 圖片的編碼 , 格式為base64
                                var title = escape(file.name);
                                var img = '<img class="upload-img" src="' + src + '" title="' + title + '" key="' + `${timeStamp}${index}` + '"/> ';
                                $('#postInput').append('<div id="postInput">' + img + '</div>');
                            };
                        })(file);
                        reader.readAsDataURL(item);
                    })
                }
            });
            function submitModifyArticle() {
                var remainImg = []
                artiNum = '<%= items[0][0].artiNum %>'
                console.log(artiNum)
                $('.postButton').addClass('disabled')
                $('.postButton').attr('disabled', true)
                $('.spinner-border').css('display', 'block')
                if ($("#postInput > .original")) {
                    Array.from($("#postInput").find('.original > img')).map((img) => {
                        $(img).before("\\:imgLocation")
                        remainImg.push(img.getAttribute('src').replace('/userImg/',''))
                    })
                }
                console.log(remainImg)

                var imgKey = []
                if ($("#postInput").find("#postInput > img")) {
                    Array.from($("#postInput").find("#postInput > img")).map((img) => {
                        imgKey.push(img.getAttribute('key'))
                    })
                    imgs.map((img) => {
                        if (imgKey.indexOf(img.timeStamp) >= 0) {
                            formData.append('userImg', img);
                        }
                    })
                    Array.from($("#postInput").find("#postInput > img")).forEach((img) => {
                        $(img).before("\\:imgLocation")
                    })
                }
                var artiHead = document.getElementById("artiHead").value;
                while (artiHead.match('/n')) {
                    artiHead = artiHead.replace('/n')
                }
                artiHead = artiHead.trim()
                var artiCont = [];
                var artiData = document.querySelectorAll("div.postInput"); //只取得文字部分(不含圖片) ;
                // 取得內容
                artiData.forEach(function (element) {
                    artiCont.push(element.innerText);
                }, this);
                var tagInput = document.querySelectorAll("span.tag"); //取得所有<span class="tag"> 的內容
                var tag = []; //以陣列形式存放
                var artiClass = document.getElementById("inputState").value;
                if (artiHead.trim() == "") {
                    artiHead = undefined;
                    // artiCont = undefined;
                }
                formData.append('artiNum', artiNum);
                formData.append('artiHead', artiHead);
                formData.append('artiCont', artiCont);
                formData.append('artiClass', artiClass);
                //取得tag 
                tagInput.forEach(function (element) {
                    tag.push(element.innerText);
                }, this);
                formData.append('tag', tag);
                $.ajax({
                    url: 'https://analyze405.herokuapp.com/sentimentAnalyze/',
                    type: 'POST',
                    dataType: 'TEXT',
                    data: { 'artiCont': `${artiCont}` },
                    success: function (res) {
                        var analyzeRes = JSON.parse(res)
                        var analyzeScore = analyzeRes.analyze[0]
                        var positiveWords = analyzeRes.analyze[1]
                        var negativeWords = analyzeRes.analyze[2]
                        var swearWords = analyzeRes.analyze[3]
                        formData.append('analyzeScore', analyzeScore);
                        formData.append('positiveWords', positiveWords);
                        formData.append('negativeWords', negativeWords);
                        formData.append('swearWords', swearWords);
                        formData.append('remainImg', remainImg);

                        $.ajax({
                            url: '/article/post',
                            type: 'POST',
                            dataType: 'TEXT',
                            data: formData,
                            processData: false,
                            contentType: false,
                            success: function (res) {
                                if (res == "請進行登入") {
                                    alert(res);
                                    location.replace("/login");
                                } else if (res == "編輯成功") {
                                    location.replace("/articleList");
                                } else {
                                    alert(res);
                                }
                            },
                            error: function (res) {
                            }
                        });
                    },
                    error: function (res) {
                        console.error(res)
                        console.log(res);
                    }
                });
            }
        </script>
          <script>
            var tagArray = []
            var classSelected = '<%= items[0][0].artiClass%>'
            $('.deleteTag').click(function() {
                console.log($(this))
                console.log($(this).parent('#tag'))
                $(this).parent('#tag').remove()
            })
        </script>
</body>

</html>