<body>
    <!-- navbar -->
    <div id="header"></div>

    <center>
        <h3>新增推薦</h3>
        <hr class="highlight">
    </center>
    <div class="justify-content-center">
        <div class="post col-lg-8 content shadow">

            <select id="inputState" class="form-control" onchange="styleselect()">
                <option value="movie">電影類</option>
                <option value="music">音樂類</option>
                <option value="exhibition">展覽類</option>
                <option value="book">書籍類</option>
            </select>


            <div id="inputData">
                <form id="infoForm">
                </form>
                <br>
            </div>

            <div class="titleInput input-with-icon title" name="recomHead" id="recomHead" contenteditable="true"
                role="textbox" data-text="請輸入您的標題"></div>

            <div id="postInto" class="postInputArea" contenteditable="true" role="textbox" data-text="簡介內容"></div>

            <div id="postInput" class="postInput" contenteditable="true" role="textbox" data-text="請輸入您的發文內容"></div>

            <div class="tag content col-lg-12">
                <input type="text" data-role="tagsinput" id="tagInput" class="form-control" placeholder=" + tag" />
            </div>
            <label class="btn btn-dark col-lg-2" style="cursor: pointer; ">
                <input id="file-selector" name="userImg" type="file" multiple="multiple"
                    accept=".jpg,.png,.gif,.tif,.bmp" />
                <i class="fas fa-images" style="padding-right:5px"></i>加圖片
            </label>

            <button type="submit" class="btn btn-danger col-lg-2 float-right" style="margin-top:1em;"
                onclick="test()">提交回覆</button>

        </div>
    </div>

    <script>
        var formData = new FormData(); //用formData來存取要傳送的所有資料
        //上傳檔案按鈕有變動就執行
        $("#file-selector").change(function () {
            var file = $("#file-selector")[0];  //取得檔案
            //如果有檔案就要加入formData
            if (file.files.length) {
                for (var i = 0; i < file.files.length; i++) {
                    $("#postInput").html(document.getElementById("postInput").innerHTML + "\\:imgLocation");
                }
                // if (document.getElementById("postInput").innerHTML.match("<img") == null) {
                //     file.value = '';
                // }

                for (var i in file.files) {
                    formData.append('userImg', file.files[i]);
                }

            }
        });

        function test() {
            var recomHead = document.getElementById("recomHead").innerHTML;
            var img = [];
            var recomCont = [];
            var recomData = document.querySelectorAll("div.postInput"); //只取得文字部分(不含圖片) ;
            // 取得內容
            recomData.forEach(function (element) {
                recomCont.push(element.innerText);
            }, this);
            console.log("????",recomCont);

            var tagInput = document.querySelectorAll("span.tag"); //取得所有<span class="tag"> 的內容
            var tag = []; //以陣列形式存放
            var recomClass = document.getElementById("inputState").value;

            if (recomHead.trim() == "") {
                recomHead = undefined;
                //  recomCont = undefined;
            }

            formData.append('recomHead', recomHead);
            formData.append('recomCont', recomCont);
            formData.append('recomClass', recomClass);
            // console.log(file.files[1]);
            // console.log(file.files[0]);

            //取得tag 
            tagInput.forEach(function (element) {
                tag.push(element.innerText);
            }, this);

            formData.append('tag', tag);

            $.ajax({
                url: '/recommend/post',
                type: 'POST',
                dataType: 'TEXT',
                data: formData,
                processData: false,
                contentType: false,
                success: function (res) {
                    console.log("yes", res);
                    if (res == "請進行登入") {
                        alert(res);
                        location.replace("/login");
                    } else if (res == "發文成功") {
                        alert(res);
                        location.reload();
                    } else {
                        alert(res);
                    }
                },
                error: function (res) {
                    // console.log("失敗", res);
                }
            });
        }

    </script>


