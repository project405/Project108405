            </label>
            <!-- </div> -->
            <button type="submit" class="btn btn-danger col-lg-2 float-right submitReplyButton" onclick=<%= "submitEditReply(" + items[0][0].artiNum + ")" %>>提交</button>

            <!-- <div class="spinner-border" role="status">
                    <span class="sr-only">Loading...</span>
            </div> -->
