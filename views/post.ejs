            <label class="btn btn-dark" style="cursor: pointer">
                <input id="file-selector" name="userImg" type="file" multiple="multiple"
                    accept=".jpg,.png,.gif,.tif,.bmp" />
                <i class="fas fa-images" style="padding-right:5px"></i>上傳圖片
            </label>

            <button type="submit" class="btn btn-danger float-right submitReply" onclick="test()">提交回覆</button>

            <script>
                var formData = new FormData(); //用formData來存取要傳送的所有資料
                //上傳檔案按鈕有變動就執行
                $("#file-selector").change(function () {
                    var file = $("#file-selector")[0];  //取得檔案
                    //如果有檔案就要加入formData
                    if (file.files.length) {
                        for (var i = 0; i < file.files.length; i++) {
                            $("#postInput").html(document.getElementById("postInput").innerHTML + "\\:imgLocation");
                        }
                        // if (document.getElementById("postInput").innerHTML.match("<img") == null) {
                        //     file.value = '';
                        // }

                        for (var i in file.files) {
                            formData.append('userImg', file.files[i]);
                        }

                    }
                });
                function test() {
                    var artiHead = document.getElementById("artiHead").innerHTML;
                    var img = [];
                    var artiCont = [];
                    var artiData = document.querySelectorAll("div.postInput"); //只取得文字部分(不含圖片) ;
                    // 取得內容
                    artiData.forEach(function (element) {
                        artiCont.push(element.innerText);
                    }, this);
                    console.log(artiCont);

                    var tagInput = document.querySelectorAll("span.tag"); //取得所有<span class="tag"> 的內容
                    var tag = []; //以陣列形式存放
                    var artiClass = document.getElementById("inputState").value;

                    if (artiHead.trim() == "") {
                        artiHead = undefined;
                        // artiCont = undefined;
                    }

                    formData.append('artiHead', artiHead);
                    formData.append('artiCont', artiCont);
                    formData.append('artiClass', artiClass);
                    // console.log(file.files[1]);
                    // console.log(file.files[0]);

                    //取得tag 
                    tagInput.forEach(function (element) {
                        tag.push(element.innerText);
                    }, this);

                    formData.append('tag', tag);

                    $.ajax({
                        url: '/article/post',
                        type: 'POST',
                        dataType: 'TEXT',
                        data: formData,
                        processData: false,
                        contentType: false,
                        success: function (res) {
                            console.log("yes", res);
                            if (res == "請進行登入") {
                                alert(res);
                                location.replace("/logIn");
                            } else if (res == "發文成功") {
                                alert(res);
                                location.replace("/articleList");
                            } else {
                                alert(res);
                            }
                        },
                        error: function (res) {
                            // console.log("失敗", res);
                        }
                    });
                }

