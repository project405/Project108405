<!doctype html>
<html>

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
        integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


    <link href="/css/header.css" rel="stylesheet" type="text/css" />
    <link href="/css/articleList.css" rel="stylesheet" type="text/css" />
    <link rel="icon" href="favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="/imgs/logo.ico" type="image/x-icon" />

    <title>文藝富心</title>
</head>

<body>

    <script src="/javascripts/header.js"></script>


    <!-- 文章列表區塊 -->
    <section id="articleList">
        <div class="container-fluid article">
            <center>
                <h3>文章收藏</h3>
                <hr class="highlight">
            </center>

            <div class="row d-flex justify-content-center  no-gutters ">

                <div class="search col-lg-6 mx-auto ">
                    <!-- Search -->
                    <form class="form-inline d-flex">
                        <input type="text" class="form-control search col-sm-9" id="search" placeholder="輸入欲搜尋之關鍵字">
                        <button type="submit" class="search btn-primary mx-auto">搜尋</button>
                    </form>
                    <!-- Search End -->
                </div>
                <div class="w-100"></div>

                <div class="col-12 mb-3 col-lg-8 ">
                    <% for(var i = 0 ; i<collData[0].length ; i++ ) {%>
                    <!-- list -->
                    <div class="card shadow list " style="cursor:pointer; ">

                        <div class="card-body "
                            onclick="location.href='/collection/article/one/<%= collData[0][i].artiNum %>'">
                            <div class="poster">
                                <div class="name">
                                    <p><%= collData[0][i].memID %> 於 <%= collData[0][i].artiDateTime %>發表</p>
                                </div>
                                <hr>
                            </div>
                            <h3 class="card-title "><%= collData[0][i].artiHead %>
                            </h3>
                            <p class="card-text "><%= collData[0][i].artiCont %>
                            </p>

                            <div class="tagDiv col-lg-12 ">
                                <% for(var j = 0 ; j<collData[3][i].length ; j++ ) {%>
                                <button type="button" class="btn  tag"><%= collData[3][i][j] %></button>
                                <% } %>
                            </div>
                            <hr class="info">

                        </div>
                        <!-- info -->
                        <div class="info">
                            <!-- 愛心按鈕 -->
                            <button type="button" id=<%= "LikeUnLogIn" + collData[0][i].artiNum %> class="btn postInfo"
                                onclick="location.href='/logIn'"><i class="fab fa-gratipay"></i>
                                <a><%= collData[1][i].count %></a></button>
                            <button type="button" id=<%="addLike" + collData[0][i].artiNum %> class="btn postInfo"
                                onclick=<%= "addLike(" + collData[0][i].artiNum + ")" %>>
                                <i class="fab fa-gratipay"></i><a id=<%= "addLikeCount" + collData[0][i].artiNum %>>
                                    <%= collData[1][i].count %></a> </button>
                            <button type="button" id=<%= "delLike" + collData[0][i].artiNum %> class="btn postInfo"
                                style="color:#c93737" onclick=<%= "delLike(" + collData[0][i].artiNum + ")" %>>
                                <i class="fab fa-gratipay"></i><a id=<%= "delLikeCount" + collData[0][i].artiNum %>>
                                    <%= collData[1][i].count %></a></button>
                            <!-- 如果沒登入 -->
                            <% if(collData[6][0] == undefined) {%>
                            <script type="text/javascript">
                                document.getElementById("LikeUnLogIn" + "<%= collData[0][i].artiNum %>").style.display = "inline";
                                document.getElementById("addLike" + "<%= collData[0][i].artiNum %>").style.display = "none";
                                document.getElementById("delLike" + "<%= collData[0][i].artiNum %>").style.display = "none";
                            </script>
                            <!-- 如果有登入及沒按過愛心       -->
                            <% }else if(collData[5][i] == 1 && collData[6][0] != undefined ) {%>
                            <script type="text/javascript">
                                document.getElementById("addLike" + "<%= collData[0][i].artiNum %>").style.display = "inline";
                                document.getElementById("LikeUnLogIn" + "<%= collData[0][i].artiNum %>").style.display = "none";
                                document.getElementById("delLike" + "<%= collData[0][i].artiNum %>").style.display = "none";
                            </script>
                            <!-- 如果有登入及按過愛心 -->
                            <% }else if(collData[5][i] == 0 && collData[6][0] != undefined ) {%>
                            <script type="text/javascript">
                                document.getElementById("delLike" + "<%= collData[0][i].artiNum %>").style.display = "inline";
                                document.getElementById("addLike" + "<%= collData[0][i].artiNum %>").style.display = "none";
                                document.getElementById("LikeUnLogIn" + "<%= collData[0][i].artiNum %>").style.display = "none";
                            </script>
                            <% }else {%>
                            <script type="text/javascript">
                                document.getElementById("delLike" + "<%= collData[0][i].artiNum %>").style.display = "none";
                                document.getElementById("addLike" + "<%= collData[0][i].artiNum %>").style.display = "none";
                                document.getElementById("LikeUnLogIn" + "<%= collData[0][i].artiNum %>").style.display = "none";
                            </script>
                            <% } %>
                            <!-- 留言數量按鈕 -->
                            <button type="button" class="btn postInfo"><i
                                    class="fas fa-comment-dots"></i><a><%= collData[2][i].count %></a></button>

                            <!-- 收藏按鈕 -->
                            <button type="button" id=<%= "unLogIn" + collData[0][i].artiNum %> class="btn postInfo"
                                onclick="location.href='/logIn'">
                                <i class="far fa-bookmark"></i></button>
                            <button type="button" id=<%=  "addColle" + collData[0][i].artiNum %> class="btn postInfo"
                                onclick=<%= "addColle(" + collData[0][i].artiNum + ")" %>>
                                <i class="far fa-bookmark"></i></button>
                            <button type="button" id=<%= "delColle" + collData[0][i].artiNum %> class="btn postInfo"
                                style="color:#c93737" onclick=<%= "delColle(" + collData[0][i].artiNum + ")" %>>
                                <i class="far fa-bookmark"></i></button>

                            <!-- 判斷每一個按鈕 是否有登入、是否有被按過 -->
                            <% if(collData[6][0] == undefined) {%>
                            <script type="text/javascript">
                                document.getElementById("unLogIn" + "<%= collData[0][i].artiNum %>").style.display = "inline";
                                document.getElementById("addColle" + "<%= collData[0][i].artiNum %>").style.display = "none";
                                document.getElementById("delColle" + "<%= collData[0][i].artiNum %>").style.display = "none";
                                console.log("1");
                            </script>
                            <% }else if(collData[4][i] == 1 && collData[6][0] != undefined ) {%>
                            <script type="text/javascript">
                                document.getElementById("addColle" + "<%= collData[0][i].artiNum %>").style.display = "inline";
                                document.getElementById("unLogIn" + "<%= collData[0][i].artiNum %>").style.display = "none";
                                document.getElementById("delColle" + "<%= collData[0][i].artiNum %>").style.display = "none";
                                console.log("2");
                            </script>
                            <% }else if(collData[4][i] == 0 && collData[6][0] != undefined ) {%>
                            <script type="text/javascript">
                                document.getElementById("delColle" + "<%= collData[0][i].artiNum %>").style.display = "inline";
                                document.getElementById("addColle" + "<%= collData[0][i].artiNum %>").style.display = "none";
                                document.getElementById("unLogIn" + "<%= collData[0][i].artiNum %>").style.display = "none";
                                console.log("3");
                            </script>
                            <% }else {%>
                            <script type="text/javascript">
                                document.getElementById("delColle" + "<%= collData[0][i].artiNum %>").style.display = "none";
                                document.getElementById("addColle" + "<%= collData[0][i].artiNum %>").style.display = "none";
                                document.getElementById("unLogIn" + "<%= collData[0][i].artiNum %>").style.display = "none";
                                console.log("3");
                            </script>
                            <% } %>

                            <!-- 收藏 ajax script -->
                            <script>
                                //新增收藏
                                function addColle(artiNum) {
                                    collection(artiNum);
                                    $.ajax({
                                        url: '/addCollection',
                                        type: 'POST',
                                        dataType: 'JSON',
                                        data: { "collectionType": "article", "artiNum": artiNum },
                                        success: function (res) {
                                            console.log("yes", JSON.stringify(res));
                                        },
                                        error: function (res) {
                                            console.log("失敗", JSON.stringify(res));
                                        }
                                    });
                                };
                                //刪除收藏
                                function delColle(artiNum) {
                                    // console.log("前端刪除訊息");
                                    cancelCollection(artiNum);
                                    $.ajax({
                                        url: '/delCollection',
                                        type: 'POST',
                                        dataType: 'JSON',
                                        data: { "collectionType": "article", "artiNum": artiNum },
                                        success: function (res) {
                                            console.log("yes", JSON.stringify(res));
                                        },
                                        error: function (res) {
                                            console.log("失敗", JSON.stringify(res));
                                        }
                                    });
                                };
                                //點收藏後改變屬性
                                function collection(artiNum) {
                                    document.getElementById("delColle" + artiNum).style.display = "inline";
                                    document.getElementById("LikeUnLogIn" + artiNum).style.display = "none";
                                    document.getElementById("addColle" + artiNum).style.display = "none";
                                }
                                //取消收藏後改變屬性
                                function cancelCollection(artiNum) {
                                    document.getElementById("addColle" + artiNum).style.display = "inline";
                                    document.getElementById("LikeUnLogIn" + artiNum).style.display = "none";
                                    document.getElementById("delColle" + artiNum).style.display = "none";
                                }

                            </script>
                            <!-- 愛心 ajax script -->
                            <script>
                                //新增愛心
                                function addLike(artiNum) {
                                    $.ajax({
                                        url: '/addLike',
                                        type: 'POST',
                                        dataType: 'text',
                                        data: { "likeType": "article", "artiNum": artiNum },
                                        success: function (res) {
                                            console.log("yes", JSON.stringify(res));
                                            likeCount(artiNum);
                                            like(artiNum);
                                        },
                                        error: function (res) {
                                            console.log("失敗", res);

                                        }
                                    });

                                };
                                //刪除愛心
                                function delLike(artiNum) {
                                    // console.log("前端刪除訊息");     
                                    $.ajax({
                                        url: '/delLike',
                                        type: 'POST',
                                        dataType: 'text',
                                        data: { "likeType": "article", "artiNum": artiNum },
                                        success: function (res) {
                                            console.log("yes", JSON.stringify(res));
                                            likeCount(artiNum);
                                            cancelLike(artiNum);
                                        },
                                        error: function (res) {
                                            console.log("刪除失敗", JSON.stringify(res));
                                        }
                                    });

                                };
                                //點愛心後改變屬性
                                function like(artiNum) {
                                    console.log("like", artiNum);
                                    document.getElementById("delLike" + artiNum).style.display = "inline";
                                    document.getElementById("LikeUnLogIn" + artiNum).style.display = "none";
                                    document.getElementById("addLike" + artiNum).style.display = "none";
                                }
                                //取消愛心後改變屬性
                                function cancelLike(artiNum) {
                                    document.getElementById("addLike" + artiNum).style.display = "inline";
                                    document.getElementById("LikeUnLogIn" + artiNum).style.display = "none";
                                    document.getElementById("delLike" + artiNum).style.display = "none";
                                }
                                function likeCount(artiNum) {
                                    $.ajax({
                                        url: '/likeCount',
                                        type: 'POST',
                                        dataType: 'JSON',
                                        data: { "likeType": "article", "artiNum": artiNum },
                                        success: function (res) {
                                            // console.log("yes", reponse.responseText);
                                            console.log("yes", JSON.stringify(res));
                                            document.getElementById("addLikeCount" + artiNum).innerHTML = JSON.stringify(res);
                                            document.getElementById("delLikeCount" + artiNum).innerHTML = JSON.stringify(res);
                                        },
                                        error: function (res) {
                                            console.log("no", JSON.stringify(res));
                                        }

                                    });
                                }
                            </script>
                        </div>
                        <!-- info結束 -->

                        <!-- <div class="wrapperCard card-img-top " style="background-image: url( 'imgs/testImgs/15.jpg'); "> -->
                    </div>

                    <div class="w-100"></div>
                    <% } %>
                    <!-- listEnd -->
                </div>
            </div>

        </div>

    </section>
    <!-- 文章列表區塊結束 -->



    <div class=" buttons fixed-bottom  d-flex justify-content-center align-middle">
        <button type="button " class="btn btn-secondary align-middle footer"
            onclick="location.href='/collection/article/movie'">電影類</button>
        <button type="button " class="btn btn-secondary align-middle footer"
            onclick="location.href='/collection/article/music'">音樂類</button>
        <button type="button " class="btn btn-secondary align-middle footer"
            onclick="location.href='/collection/article/book'">書籍類</button>
        <button type="button " class="btn btn-secondary align-middle footer"
            onclick="location.href='/collection/article/exhibition'">展覽類</button>
        <button type="button " class="btn btn-secondary footer"
            onclick="location.href='/collection/article'">全部</button>
    </div>


    <a href="#" id="gotop">
        <i class="fa fa-angle-up"></i>
    </a>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
    <script src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>
    <script src="/javascripts/active.js"></script>
</body>

</html>