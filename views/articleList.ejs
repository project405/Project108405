    <title>文藝富心</title>
</head>

<body>

    <script src="/javascripts/header.js"></script>


    <!-- 文章列表區塊 -->
    <section id="articleList">
        <div class="container-fluid article">
            <center>
                <h2>文章列表</h2>
                <hr class="highlight">


            </center>

            <div class="row d-flex justify-content-center">

                <div class=" buttons fixed-bottom  d-flex justify-content-center align-middle">
                    <button type="button " class="btn btn-secondary "
                        onclick="location.href='/articleList'">所有分類</button>
                    <button type="button " class="btn btn-secondary align-middle"
                        onclick="location.href='/articleList/articleMovie'">電影類</button>
                    <button type="button " class="btn btn-secondary align-middle"
                        onclick="location.href='/articleList/articleMusic'">音樂類</button>
                    <button type="button " class="btn btn-secondary align-middle"
                        onclick="location.href='/articleList/articleBook'">書籍類</button>
                    <button type="button " class="btn btn-secondary align-middle"
                        onclick="location.href='/articleList/articleExhibition'">展覽類</button>

                </div>
                <div class="search col-12 d-flex justify-content-center">
                    <!-- Search -->
                    <form class=" search " action="action_page.php ">
                        <input type="text " class="search" placeholder="輸入欲搜尋之關鍵字 " name="search ">
                        <button type="submit "><i class="fa fa-search "></i></button>
                    </form>
                    <!-- Search End -->
                </div>

                <div class="col-12 mb-3 col-lg-10 ">
                    <% for(var i=0; i<items.length; i++) {%>
                    <div class="card shadow list " onclick="location.href='/article/<%= items[i].artiNum %>' "
                        style="cursor:pointer;">
                        <div class="card-body ">
                            <h3 class="card-title "><%= items[i].artiHead %>
                            </h3>
                            <p class="card-text "><%= items[i].artiCont %>
                            </p>
                            <p class="poster ">
                                <a class="floorTag text-break ">樓主</a> 匿名 於 <%= items[i].artiDateTime %>發佈
                            </p>
                            <div class="tagDiv col-lg-12 text-break ">
                                <a class="tag text-break " href="# "> 可愛</a>
                                <a class="tag text-break " href="# "> 皮卡丘</a>
                                <a class="tag text-break " href="# "> 皮卡丘</a>
                                <a class="tag text-break " href="# "> 皮卡丘</a>
                                <a class="tag text-break " href="# "> 皮卡丘</a>
                                <a class="tag text-break " href="# "> 有毛的</a>
                                <a class="tag text-break " href="# "> 萌</a>
                            </div>
                        </div>
                        <!-- <div class="wrapperCard card-img-top " style="background-image: url( 'imgs/testImgs/15.jpg'); ">
                        </div> -->
                    </div>
                    <% } %>

                </div>

            </div>


        </div>
    </section>
    <!-- 文章列表區塊結束 -->

