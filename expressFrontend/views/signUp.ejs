    <div class="modal fade" id="report" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalCenterTitle">申報：</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body" style="padding:1em;">
                    <textarea class="report"></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">提交</button>
                </div>
            </div>
        </div>
    </div>

    <center>
        <h3>註冊</h3>
        <hr class="highlight">
    </center>
    <section id="signUp">
        <div class="container-fluid row flex justify-content-center signUp no-gutters">
            <form class="signUp col-lg-4" action="" onchange="checkValue()">
                <div class="input-icon-wrap">
                    <span class="input-icon"><span class="fa fa-user"></span></span>
                    <input type="text" class="input-with-icon" id="ID" placeholder="帳號" required onchange="idValidateForm()">
                </div>
                <p id="idAlarm"></p>
                <div class="input-icon-wrap">
                    <span class="input-icon"><span class="fas fa-user-circle"></span></span>
                    <input type="text" class="input-with-icon" id="closeId" placeholder="暱稱（註冊成功後不得修改）" required onchange="closeIdValidateForm()">
                </div>
                <p id="closeIdAlarm"></p>

                <div class="input-icon-wrap">
                    <span class="input-icon"><span class="fas fa-lock"></span></span>
                    <input type="password" class="input-with-icon" id="password" placeholder="密碼" required onchange="passcheck()">
                </div>
                <p id="passwordAlarm"></p>

                <div class="input-icon-wrap">
                    <span class="input-icon"><span class="fas fa-lock"></span></span>
                    <input type="password" class="input-with-icon" id="checkPassword" placeholder="確認密碼" required onchange="passcheck()">
                </div>
                <p id="checkPasswordAlarm"></p>

                <div class="input-icon-wrap">
                    <span class="input-icon"><span class="fas fa-envelope-open-text"></span></span>
                    <input type="email" class="input-with-icon" id="email" placeholder="email" required>
                </div>


                <div class="input-icon-wrap">
                    <span class="input-icon"><span class="fas fa-birthday-cake"></span></span>
                    <input type="date" class="input-with-icon" id="birthday" placeholder="生日" required onchange="birthdayValidateForm()">
                </div>
                <p id="birthdayAlarm"></p>

                <div class="input-icon-wrap radio">
                    <span class="input-icon align-middle"><span class="fas fa-venus-mars"></span></span>
                    <div>
                        <input id="radio-1" class="radio-custom" name="radio-group" type="radio" required>
                        <label for="radio-1" class="radio-custom-label">男生</label>
                    </div>
                    <div>
                        <input id="radio-2" class="radio-custom" name="radio-group" type="radio" required>
                        <label for="radio-2" class="radio-custom-label">女生</label>
                    </div>

                </div>
                <button type="submit" id="submit" class="btn btn-danger" disabled>註冊</button>
            </form>

        </div>
    </section>



